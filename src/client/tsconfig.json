{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    "baseUrl": ".",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["../*"]
    },
    "resolveJsonModule": true,
    "types": ["@vue-macros/reactivity-transform/macros-global", "naive-ui/volar", "unplugin-vue-router/client", "vite/client"],
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /* append */
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },

  "references": [{ "path": "./tsconfig.node.json" }]
}
